<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>OA-VerifyAccessToken</Name>
            </Step>
            <Step>
                <Name>AM-RemoveHeaderAuthz</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Get file info">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>AM-MockBackendResponse</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/file/**") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Download file">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>JS-SetTargetServiceURL</Name>
                </Step>
                <Step>
                    <Name>SC-GetSignedUrl</Name>
                </Step>
                <Step>
                    <Name>EV-GetURL</Name>
                </Step>
                <Step>
                    <Name>AM-DownloadRedirect</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/download") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="404NotFound">
            <Description/>
            <Request>
                <Step>
                    <Name>RF-404</Name>
                </Step>
            </Request>
            <Response/>
            <Condition/>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/storage</BasePath>
    </HTTPProxyConnection>
    <RouteRule name="NoTarget"/>
</ProxyEndpoint>