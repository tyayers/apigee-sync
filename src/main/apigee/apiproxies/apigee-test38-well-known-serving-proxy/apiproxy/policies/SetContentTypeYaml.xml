<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage name="SetContentTypeYaml">
    <AssignTo createNew="false" type="response"/>
    <Set>
        <Headers>
            <Header name="Content-Type">text/yaml</Header>
        </Headers>
    </Set>
    <Condition>(proxy.pathsuffix MatchesPath "/openapi.yaml")</Condition>
</AssignMessage>